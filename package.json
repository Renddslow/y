{
	"name": "y",
	"version": "0.0.0",
	"private": false,
	"description": "A lo-fi strategy simulation game.",
	"repository": "https://github.com/Renddslow/y",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {
		"build": "vite build",
		"start": "vite serve",
		"postbuild": "cp index.html dist"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^16.0.1",
		"@wedgekit/scripts": "^0.0.8",
		"ava": "^3.15.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5",
		"vite": "^2.4.1"
	},
	"dependencies": {
		"goober": "^2.0.38",
		"preact": "^10.5.14"
	}
}
